<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="be.robinj.ubuntu" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.GET_TASKS" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".Application"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".HomeActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:windowSoftInputMode="adjustPan" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.HOME" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AboutActivity"
            android:label="@string/title_activity_about"
            android:parentActivityName=".preferences.PreferencesActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="be.robinj.ubuntu.preferences.PreferencesActivity" />
        </activity>
        <activity
            android:name=".preferences.PreferencesActivity"
            android:label="@string/title_activity_preferences"
            android:parentActivityName=".HomeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="be.robinj.ubuntu.HomeActivity" />
        </activity>
        <activity
            android:name=".ContributeActivity"
            android:label="@string/title_activity_contribute"
            android:parentActivityName=".AboutActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="be.robinj.ubuntu.AboutActivity" />
        </activity>

        <service android:name=".unity.launcher.service.LauncherService" />

        <activity
            android:name=".preferences.LensPreferencesActivity"
            android:label="@string/title_activity_lens_preferences"
            android:parentActivityName=".preferences.PreferencesActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="be.robinj.ubuntu.preferences.PreferencesActivity" />
        </activity>
        <activity
            android:name=".preferences.ThemePreferencesActivity"
            android:label="@string/title_activity_theme_preferences"
            android:parentActivityName=".preferences.PreferencesActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="be.robinj.ubuntu.preferences.PreferencesActivity" />
        </activity>
        <activity
            android:name=".dev.DevLogsActivity"
            android:label="@string/title_activity_dev_logs"
            android:parentActivityName=".preferences.PreferencesActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="be.robinj.ubuntu.preferences.PreferencesActivity" />
        </activity>
    </application>

</manifest>
